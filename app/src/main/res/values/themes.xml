<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    By default, the primary color is used for:
        the main text color,
        the icons and text in the side menu drawer,
        the heading text color,
        the icons in the formatting bar (70% opacity),
        the date color in the notes preview (70% opacity).

    By default, the primary color variant is used for:
        the phone's status bar,
        the app's toolbar background.

    By default, the secondary color is used for:
        the app's background,
        the background of the side menu drawer,
        the app's title in the toolbar,
        the toolbar icons.

    By default, the secondary color variant is used for:
        the text highlight color,
        the formatting bar color (70% opacity),
        the edit text input field hint text color.

    -->

    <!-- The main parent theme - all other themes inherit all attributes from this one, unless specified otherwise. -->
    <style name="Theme.Jots" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="themeIdAttr">@string/theme_default_id</item>

        <item name="themeTitle">@string/theme_default_title</item>
        <item name="themeDescription">@string/theme_default_description</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey</item>

        <item name="paragraphTextSize">16sp</item>
        <item name="headingTextSize">22sp</item>
        <item name="titleTextSize">24sp</item>
        <item name="notePreviewTitleTextSize">20sp</item>
        <item name="contextualHeadingTextSize">18sp</item>
        <item name="alertDialogTitleTextSize">20sp</item>
        <item name="smallTextSize">12sp</item>

        <item name="appBackgroundColor">?attr/colorSecondary</item>
        <item name="drawerForegroundColor">?attr/colorPrimary</item>
        <item name="statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="toolbarBackgroundColor">?attr/colorPrimaryVariant</item>
        <item name="drawerBackgroundColor">?attr/colorSecondary</item>

        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="toolbarIconColor">?attr/colorSecondary</item>
        <item name="actionMenuTextColor">?attr/titleTextColor</item>
        <item name="colorControlNormal">?attr/toolbarIconColor</item>

        <item name="fontFamily">@font/raleway_light</item>
        <item name="titleFontFamily">?attr/fontFamily</item>
        <item name="headingFontFamily">?attr/fontFamily</item>
        <item name="mainFontColor">?attr/colorPrimary</item>
        <item name="textHighlightColor">?attr/colorSecondaryVariant</item>
        <item name="editTextHintColor">?attr/colorSecondaryVariant</item>
        <item name="formatBarColor">?attr/colorSecondaryVariant</item>
        <item name="formatBarIconsColor">?attr/colorPrimary</item>

        <item name="android:windowBackground">?attr/appBackgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/statusBarColor</item>
        <item name="android:textColorHighlight">?attr/textHighlightColor</item>
        <item name="itemTextColor">?attr/drawerForegroundColor</item>
        <item name="itemIconTint">?attr/drawerForegroundColor</item>
        <item name="itemBackground">?attr/drawerBackgroundColor</item>
        <item name="headingColor">?attr/colorPrimary</item>
        <item name="toggledSwitchColor">?attr/headingColor</item>

        <item name="materialAlertDialogTheme">@style/Jots.AlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Jots.AlertDialog</item>

        <item name="textAppearanceSubtitle1">@style/Jots.Text</item>

    </style>

